<% content_for :title, "Bus Booking Agents-MNRYP" %>
<%= render 'Homepage/navmenu' %>
<div class='container pt-4'>
<div class="float-left">
    <input type="text" class="search form-control" placeholder="<%= t('looking') %>">
</div>
<span class="counter float-left"></span><br><br>
     <div class="widget stacked widget-table action-table results">
				<div class="widget-header pl-2">
					<i class="fas fa-bus" aria-hidden="true"></i>
					<h3> <%= t('bus_book_agent') %></h3>
				</div> 
				<div class="widget-content">
					<table class="table table-striped table-bordered">
						<thead>
							<tr>
								<th><%= t('book_agent_name') %> </th>
								<th><%= t('book_agent_address') %> </th>
								<th><%= t('book_agent_phone') %> </th>
							</tr>
                            <tr class="warning no-result">
                                <td colspan="4"><i class="fa fa-exclamation-circle" aria-hidden="true"></i> <%= t('no_result') %> </td>
                            </tr>
						</thead>
						<tbody>
                        <% @agents.each do |agent|%>
							<tr>
								<td><%= agent.name %></td>
								<td><%= agent.address %></td>
								<td><%= agent.phone %></td>
							</tr>
                        <% end %>
							</tbody>
						</table>
</div> 
</div>
</div>
