<% content_for :title, "MNR Today-MNRYP" %>
<%= render 'Homepage/navmenu' %>

<div class="container">
	<div class="d-flex flex-row">
        <h1 class="form_title"> <%= t('mnr') %> <span class="mnryp_word"> <%= t('today') %> | </span></h1>
    <div class="mnryp_word ml-2 mt-2">
        <%= link_to new_event_path do %>
        	<h6 >  <%= t('add_event') %> <span style="font-size: 1rem !important;"><i class="fas fa-plus-circle"></i></span></h6>
        <% end %>
    </div>
</div>
        <h4 class="form_title"> <%= t('todays') %> <span class="mnryp_word"> <%= t('events') %></span></h4>
		<div class="row">
			<% if @todays_events.count == 0 %>
				<span class="ml-3"><%= t('no_events_today') %>!&#128577;</span>
			<% else %>
				<% @todays_events.each do |event| %>
				<div class="col-sm-offset-2 col-md-6 ">
					<div class="card mt-2">
							<div class="row">
								<div class="col-3 border text-center" style="background-color: #8db4a4;">
									<h4 class="day text-white" style="font-size: 2rem !important;"><%= event.date.strftime("%d") %></h4>
									<span class="month text-white" style="font-size: 2rem !important;"><%= event.date.strftime("%b") %></span>
								</div>
								<div class="col-6 m-2">
									<h2 class="title responsive-text"> <%= event.title %></h2>
									<span class="responsive-text"><i class="fas fa-map-marker-alt" style="color:red"></i> <%= event.location %></span>
								    <p class="desc" style="font-size: 1rem !important;"><%= event.description %></p>
							    </div>
							</div>
					</div>
				</div>
				<% end %>
			<% end %>
			
		</div>
<hr/>
        <h4 class="form_title"> <%= t('upcoming') %> <span class="mnryp_word"><%= t('upevents') %></span></h4>
		<div class="row">
			<% if @coming_events.count == 0 %>
				<span class="ml-3"><%= t('no_upcoming_events') %> !&#128577;</span>
			<% else %>
					<% @coming_events.each do |event| %>
					<div class="col-sm-offset-2 col-md-6 ">
						<div class="card mt-2">
								<div class="row">
									<div class="col-3 border text-center" style="background-color: #8db4a4;">
										<h4 class="day text-white" style="font-size: 2rem !important;"><%= event.date.strftime("%d") %></h4>
										<span class="month text-white" style="font-size: 2rem !important;"><%= event.date.strftime("%b") %></span>
									</div>
									<div class="col-6 m-2">
										<h2 class="title responsive-text"> <%= event.title %></h2>
										<span class="responsive-text"><i class="fas fa-map-marker-alt" style="color:red"></i> <%= event.location %></span>
									    <p class="desc" style="font-size: 1rem !important;"><%= event.description %></p>
								    </div>
								</div>
						</div>
					</div>
					<% end %>
			<% end %>
		</div>
	</div>