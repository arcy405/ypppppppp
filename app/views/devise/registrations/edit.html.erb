
 <link rel="stylesheet" href="sign_up.scss">
 <div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-md-6">
                <div class="card1 pb-5">
                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                               <%= cl_image_tag("https://res.cloudinary.com/di7sekeem/image/upload/v1614668262/mnryplogo_arr1rm.png", :quality=>"auto:low",:class=>"image",:fetch_format=>"auto",:flags=>"lossy",:loading=>"lazy",:size=>"400") %>  
                      </div>
                </div>
            </div>
             <div class="col-md-4 border border-radius-dark-2">
                  <div class="Back">
                        <i class="fa fa-arrow-left" onclick="Back()"></i>
                        <script>
                          function Back() {
                            window.history.back();
                          }
                          </script>
                    </div>

                  <p class="h2 text-center">Edit User</p>
                   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= render "devise/shared/error_messages", resource: resource %>
                      <div class="preview text-center">
                          
                          <% if !current_user.image_url.nil? %>
                                <%= cl_image_tag(current_user.image, :quality=>"auto:low",:fetch_format=>"auto",:flags=>"lossy", loading:"lazy", class:"prof-pic") %>
                                <% else %>
                                <img class="preview-img" src="http://simpleicon.com/wp-content/uploads/account.png" alt="Preview Image" width="200" height="200"/>
                          <% end %>
                          <div class="browse-button">
                              <i class="fa fa-pencil-alt"></i>
                              <%= f.file_field :image, direct_upload: true,class:"form-control browse-input", id:"UploadedFile" %>
                                        <%= f.hidden_field :image_cache %>
                          </div>
                          <span class="Error"></span>
                      </div>
                      <label>Name:</label>
                      <div class="form-group">
                          <%= f.text_field :name, class:"form-control", autofocus: true, placeholder:"Enter Your Full Name" %>
                          <span class="Error"></span>
                      </div>
                      <label>Email:</label>
                      <div class="form-group">
                          <%= f.text_field :email, class:"form-control", autofocus: true, placeholder:"Enter Your Email" %>
                          <span class="Error"></span>
                      </div>
                        <label>phone:</label>
                      <div class="form-group">
                          <%= f.text_field :phone, class:"form-control", autofocus: true, placeholder:"Enter Your Phone" %>
                          <span class="Error"></span>
                      </div>
                        <label>Address:</label>
                      <div class="form-group">
                          <%= f.text_field :address, class:"form-control", autofocus: true, placeholder:"Enter Your Address" %>
                          <span class="Error"></span>
                      </div>
                          <label>Work:</label>
                      <div class="form-group">
                            <%= f.select :work, options_for_select(["What You Do? Select", "Student", "Bank Profesional", "Teacher/Profesor", "Software and IT Professional", "Manager", "CEO", "Receptionist", "Doctor", "labourer", "Engineer","Businessman", "Entreprenuer", "Health Professional", "Carpenter", "Mistri", "Driver","Electricial", "Plumber"]), :class => 'genForm_dropBox' %>
                          <span class="Error"></span>
                      </div>
                        <label class="my-2">Gmail:</label>
                      <div class="form-group">
                          <%= f.text_field :gmail, class:"form-control", autofocus: true, placeholder:"Enter Your Gmail" %>
                          <span class="Error"></span>
                      </div>
                      <div class="form-group">
                          <label>Password:</label>
                          <%= f.password_field :password, autocomplete: "current-password",class:"form-control" ,placeholder:"Password" %>
                          <span class="Error"></span>
                      </div>
                       <div class="form-group">
                          <label>Current assword:</label>
                          <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control" ,placeholder:"Password" %>
                          <span class="Error"></span>
                      </div>
                       <div class="form-group">
                          <label> Confirm Password:</label>
                          <%= f.password_field :password_confirmation, autocomplete: "current-password",class:"form-control" ,placeholder:"Confirm Password" %>
                          <span class="Error"></span>
                      </div>
                      <div class="form-group">
                          <%= f.submit "Update",class:"btn btn-success form-control" %>
                      </div>
                  <% end %>
              </div>
            </div>
        </div>
    </div>
</div>





         