<div class="row clearfix">

    <div class="col_half">
    <div class="input_field"> 
        <%= f.select :roomBedroom, options_for_select([["No. of Bedroom", ""], "One", "Two", "Three", "Four", "Five", "Six", "Seven", "Eight"], selected: f.object.roomBedroom) %>
    </div>
    </div>
    <div class="col_half">
    <div class="input_field"> 
        <%= f.label "Kitchen", style: "font-size: 100%;" %>
    <%= f.check_box :roomKitchen %> 
    </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col_half">
    <div class="input_field"> 
        <%= f.label "Bathroom", style: "font-size: 100%;" %>
    <%= f.check_box :roomBathroom %> 
    </div>
    </div>
    <div class="col_half">
    <div class="input_field"> 
        <%= f.select :roomFloor, options_for_select([["Select Floor", ""], "Ground", "First", "Second", "Third", "Fourth", "Fifth", "Sixth"], selected: f.object.roomFloor) %>
    </div>
    </div>
</div>

<div class="text-muted"><%= t('marketplace_placeholer_5') %></div>
            <%= f.fields_for :realestate_images do |p| %>
                <div class="input-group has-validation">
                   <%= p.file_field :image, direct_upload: true,:multiple => true, class:"form-control",name: "realestate_images[image][]" %>
                   <div class="invalid-feedback">
                      Please upload property Images.
                    </div>
                </div>
                 <%= p.hidden_field :image_cache %>
           <% end %>
     <pre><%= t('marketplace_placeholer_6') %></pre>
     <hr />

