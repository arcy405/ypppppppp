<% content_for :title, "#{@catname}-MNRYP" %>
<%= render 'Homepage/navmenu' %>
<div class="container-fluid">
    <!----------------------------------------breadcrumb section-------------------------------------->
            <div class="row  p-2">
                <div class="breadcrumb-default">
                    <a href="<%= root_path %>" style="text-decoration: none"><i class="fas fa-home"></i>Home/</a>
                    <a href="#" style="text-decoration: none"><%= @catname %></a>
                </div>
            </div>
        <!------------------------------------------------------------------------------->
        <div id="cards_landscape_wrap-2">

        <div class="row">
         <% @lists.each do |list| %>
            <% if list.status == 1%>
                <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12 pb-2">
                    <%= link_to listings_show_path(id: list.id),:style=>'text-decoration:none' do%>
                        <div class="card-flyer">
                            <div class="text-box">
                                <div class="image-box">
                                    <% if list.image.present? %>
                                        <img src="<%= list.image %>" loading="lazy" alt="MNRYP" />
                                    <%end%>
                                </div>
                                <div class="text-container">
                                    <h5 class="card-title"><%= list.name %></h5>
                                <% list.reviews.average(:rating).to_i.times do %>
                                    <span class="fa fa-star checked"></span>
                                <% end %>
                                <% (5-list.reviews.average(:rating).to_i).times do %>
                                    <span class="fa fa-star text-muted"></span>
                                <% end %>
                                <p class="card-text text-muted"><i class="fas fa-map-marker-alt"></i>&nbsp;<%= list.address %></p>
                                <p class="card-text"><i class="fas fa-phone-alt"></i>&nbsp;<%= list.phone %></p>
                                </div>
                            </div>
                        </div>
                    <%end%>
                </div>
            <%end%>
          <%end%>
        </div>
    </div>
</div>



