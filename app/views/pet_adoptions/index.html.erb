<% content_for :title, "Pet Adoption-MNRYP" %>
<%= render 'Homepage/navmenu' %>

<div class="mt-4 ml-4 mb-2">
    <%= link_to new_pet_adoption_path, style:"text-decoration:none; font-size: 20px;" do %>
        <%= t('add_pets') %>
    <i class="fas fa-plus-circle ml-2"></i>
	<% end %>  
</div>

<!-- Topic Cards -->
<div id="cards_landscape_wrap-2">
    <div class="container">
        <div class="row">
            <% @pet_adoptions.each do |pet| %>
                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                    <a href="#">
                        <div class="card-flyer">
                            <div class="text-box">
                                <div class="image-box">
                                    <%= cl_image_tag(pet.image, :quality=>"auto:low",:fetch_format=>"auto",:flags=>"lossy") %>
                                </div>
                                <div class="text-container">
                                    <h6><%= pet.pet_name %></h6>
                                    
                                    <h6><i class="fas fa-phone-alt"></i> <%= pet.contact %></h6>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% end %>
        </div>
    </div>
</div>
